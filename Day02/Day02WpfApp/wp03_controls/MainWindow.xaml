<Window x:Class="wp03_controls.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wp03_controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="250">
    <StackPanel>
        <Button x:Name="BtnOK" Content="Normal" Width="80" Height="35" />
        <ToggleButton x:Name="BtnToggle" Content="오프상태" Width="80" Height="35" />
        <CheckBox x:Name="ChkFruitStrawberry" Content="딸기" IsChecked="True" Width="100" />
        <CheckBox x:Name="ChkFruitMango" Content="맹고" Width="100" />
        <RadioButton x:Name="RdoMale" Content="남자" IsChecked="True" Width="100" />
        <RadioButton x:Name="RdoFemale" Content="여자" Width="100" />

        <Button x:Name="BtnMedia" Width="160" Height="60">
            <StackPanel Orientation="Horizontal">
                <!--<MediaElement Source="video.mp4" LoadedBehavior="Play" />-->
                <Image Source="xaml.png" Width="32" />
                <Label Content="XAML 클릭" VerticalAlignment="Center"/>
            </StackPanel>
        </Button>
        <Ellipse Width="50" Height="50" Fill="blue" StrokeThickness="10" Stroke="red" RenderTransformOrigin="0.5,0.5"/>
        <Rectangle Width="50" Height="50" Fill="White" Stroke="Black" StrokeThickness="15" />
        <Path Width="50" Height="30" Fill="Green">
            <Path.Data>
                <!--<RectangleGeometry Rect="0 ,0 ,30, 30" />-->
                <EllipseGeometry Center="15, 15" RadiusX="5" RadiusY="5" />
            </Path.Data>
        </Path>
    </StackPanel>
</Window>
